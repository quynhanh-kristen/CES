@page "/confirmation"
{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Order Confirmation</title>
    <style>
        .blue-field{
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 100%;
            height:10%;
            background-color: #0c0c16;
            color: white;
            padding: 20px;
        }

        .order-details {
            width: 30%;
            float: left;
        }

        .button-container {
            clear: both;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="blue-field"></div>
    <h1>Order Confirmation</h1>
    <div class="order-details">
        <p>
            Your order has been processed. Click below to print a summary, or go back to the route calculator to order a new package.
        </p>
    </div>
    <div class="button-container">
        <button>Print</button>
        <button>Order Again</button>
    </div>
</body>
</html>
